<% include header %>

<div class="app">
  <div class="appHeader">
    <div class="appName">
      CryptoHocrux
    </div>
    <div class="appSubtext">
      "Thou shall never be lost again"
    </div>
  </div>
  <div class="appNav">
    <a href="/">
      <div class="appNavEntry">
        Create Hocrux
      </div>
    </a>
    <a href="/combine">
      <div class="appNavEntry">
        Combine Hocrux
      </div>
    </a>
    <div class="clear"></div>
  </div>
  <div class="appQuestion">
    <div class="appSection">
      <div class="appSectionTitle">
        About CryptoHocrux
      </div>
      <div class="appInstruction">
        <ul>
          <li>
            Plausible Deniability
          </li>
          <li>
            Distributed Storage
          </li>
          <li>
            Theft Prevention
          </li>
        </ul>
      </div>
    </div>
    <div class="appSection">
      <div>
        <img class="icon icons8-Split-Files" src="data:image/png;base64," width="50" height="50">
      </div>
      <div class="appSectionTitle">
        Asset Splitting
      </div>
      <div class="appInstruction">
        Select type of content to split
      </div>
      <div>
        <div class="btnType">
          <button>Private Key</button>
        </div>
        <div class="btnType">
          <button>Wallet Mnemonic</button>
        </div>
      </div>
    </div>
    <div class="appSection">
      <div>
        <img class="icon icons8-Ignore" src="data:image/png;base64," width="48" height="48">
      </div>
      <div class="appSectionTitle">
        Obscurity setting
      </div>
      <div class="appInstruction">
        *In case you don't trust the server, you can obscure it on your end
      </div>
      <div>
        
      </div>
    </div>
    <div class="appSection">
      <div>
        <img class="icon icons8-Hashtag-Large" src="data:image/png;base64," width="48" height="48">
      </div>
      <div class="appSectionTitle">
        2 way hash setting
      </div>
      <div class="appInstruction">
        This is so that in the case of MITM, your info is always sent encrypted.
      </div>
      <div class="inputField">
        Password: <input type="password" id="passwordInput">
      </div>
      <div class="inputField">
        Re-type Password: <input type="password" id="passwordCheck">
      </div>
      <div class="inputField">
        Salt: <input type="text" id="saltInput" value="superSecretSalt">
      </div>
    </div>
    <div class="appSection">
      <div>
        <img class="icon icons8-Elections" src="data:image/png;base64," width="48" height="48">
      </div>
      <div class="appSectionTitle">
        Key Setting
      </div>
      <div class="appInstruction">
        Select how you would like to split your key
      </div>
      <div>
        <span>
          <input type="number" id="hocruxNeeded" value="2" step="1" min="2" max="10">
        </span>
        of
        <span>
          <input type="number" id="hocruxTotal" value="3" step="1" min="3" max="10">
        </span>
      </div>
    </div>
    <div class="appSection">
      <div>
        <img class="icon icons8-Key-2" src="data:image/png;base64," width="48" height="48">
      </div>
      <div class="appSectionTitle">
        Key Input
      </div>
      <div class="appInstruction">
        Enter your key and generate your hocrux
      </div>
      <div class="inputField">
        <input type="text" id="hocruxInput">
      </div>
      <div>
        <button id="submit">Generate Hocrux</button>
      </div>
    </div>
  </div>
  
  <div class="appResult">
    <div class="appSection">
      <div>
        <img class="icon icons8-Refund" src="data:image/png;base64," width="48" height="48">
      </div>
      <div class="appSectionTitle">
        Horcrux Output
      </div>
      <div class="appInstruction">
        Store these hocrux separately to safeguard your crypto-assets. <br />
        Do remember to test if your hocrux work by combining them.
      </div>
      <div class="outputArea">
        
      </div>
    </div>
  </div>
  <div class="clear"></div>
  <div class="appFooter">
    <div>
      Donate
    </div>
    <div>
      ad
    </div>
    <div>
      Github source
    </div>
  </div>
</div>

<script>
  $(function() {
    
    $("#submit").click(function(){
        $.ajax({
          url: '/generate-hocrux',
          type: 'POST',
          data: {
            hocruxInput: $("#hocruxInput").val(),
            hocruxNeeded: $("#hocruxNeeded").val(),
            hocruxTotal: $("#hocruxTotal").val(),
            passwordInput: $("#passwordInput").val(),
            saltInput: $("#saltInput").val(),
          },
          success: function(data){
            $(".outputArea").html("");
            for (var i=0; i<data.length; i++) {
              $(".outputArea").append('<div><input value='+data[i]+'></div>');
            }
          },
          error: function(data){
            
          }
        });
    })
    
    if( $("#passwordInput").val() == $("#passwordCheck").val() ){
      
    }else{
      
    }
  });
</script>

